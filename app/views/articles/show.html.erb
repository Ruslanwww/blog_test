<h1><%= @article.title %></h1>

<p><%= @article.text %></p>
<br />
<br />

<h2>Add comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
<br />

<h2>All comments:</h2>
<% @article.comments.reverse.each do |comment| %>
  <h3><%= comment.author %></h3>
  <p><%= comment.body %></p>
  <p><%= comment.created_at %></p>
  <hr />
<% end %>